<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_google_maps"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:fontFamily="@font/opensan_regular"
                android:text="Please update your location first to proceed further..."
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/edittext_border_black"
            android:fontFamily="@font/opensan_regular"
            android:paddingHorizontal="40dp"
            android:paddingVertical="6dp"
            android:text="OK"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>


</RelativeLayout>