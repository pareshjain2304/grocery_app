<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llMenu"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/idIVcourse"
                        android:layout_width="80dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:src="@drawable/category4" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFavorite"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_heart" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/llFavorite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/llProductItem">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/opensan_regular"
                            android:text="A2 Desi Gir Cow Ghee"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="16sp">

                        </TextView>

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:id="@+id/productDescription"-->
<!--                            android:fontFamily="@font/opensan_regular"-->
<!--                            android:text="(Orgasatva)"-->
<!--                            android:textAllCaps="false"-->
<!--                            android:layout_marginRight="20dp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:textSize="14sp"></TextView>-->


                    </LinearLayout>

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensan_regular"
                        android:textColor="#fea964"
                        android:text="Rs 910"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvVariantId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensan_regular"
                        android:textColor="#fea964"
                        android:text="Rs 910"
                        android:textAllCaps="false"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvPTime"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text=""/>

                    <RelativeLayout
                        android:id="@+id/rlAvailable"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="90dp"
                            android:background="@drawable/product_spinner"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/simpleSpinner"
                                android:layout_width="90dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_gravity="center"
                                android:layout_height="30dp"
                                android:background="@drawable/spinner_type" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llProductCart"
                            android:layout_width="110dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/colorpopti"
                            android:layout_margin="1dp"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/productDec"
                                android:visibility="gone"
                                android:layout_width="22dp"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:src="@drawable/product_detail_dec"></ImageView>
                        </LinearLayout>

                            <TextView
                                android:id="@+id/tvCartStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensan_regular"
                                android:gravity="center"
                                android:text="Add to Cart"
                                android:textAllCaps="false"
                                android:background="@color/colorpopti"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:visibility="visible"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:id="@+id/tvItemNo"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensan_regular"
                                android:gravity="center"
                                android:visibility="gone"
                                android:text="Add to Cart"
                                android:background="@color/colorpopti"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold">
                            </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_margin="1dp"
                            android:background="@color/colorpopti"
                            android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/productInc"
                            android:visibility="gone"
                            android:layout_width="22dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:src="@drawable/product_detail_inc"></ImageView>
                        </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>