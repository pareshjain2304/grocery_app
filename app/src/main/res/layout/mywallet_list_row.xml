<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llHistoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/ic_edit_search"
        android:orientation="horizontal"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/opensan_regular"
                android:gravity="left"
                android:text="Amount"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensan_regular"
                android:gravity="left"
                android:text="01/06/2020 10:05 AM"
                android:textColor="@color/colorLightBlack"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_rupees"
                android:fontFamily="@font/opensan_regular"
                android:text="450 /-"
                android:textColor="@color/colorBlack"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensan_regular"
                android:gravity="center"
                android:text="Credited To"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBorderBlue"
                android:drawableRight="@drawable/ic_wallet_blue"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>