                                android:text="450 /-"
                                android:id="@+id/tvTotalAmnt"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llViewPrescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/rectangle_note"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensan_regular"
                                android:gravity="left"
                                android:padding="10dp"
                                android:text="Prescription"
                                android:textColor="@color/colorBorderBlue"
                                android:textSize="14sp"
                                android:textStyle="bold"></TextView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorBlack"></View>

                            <ImageView
                                android:id="@+id/ivPrescription"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:scaleType="fitXY">
                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llHelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rectangle_note"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_needhelp">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensan_regular"
                                android:gravity="left"
                                android:layout_marginLeft="20dp"
                                android:text="Need Help ?"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp"></TextView>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNoNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_network_connection">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensan_regular"
                android:text="No Network Connection"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llRefresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorGreenBg"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    android:src="@drawable/ic_refresh">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensan_regular"
                    android:text="Tap To Retry"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

